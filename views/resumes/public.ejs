<!DOCTYPE html>
<html>
<head>
  <title><%= user.name %>'s Portfolio</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container mt-5">
  <h1><%= user.name %>'s Portfolio</h1>

  <h4>Summary</h4>
  <p><%= resume.summary %></p>

  <h4>Education</h4>
  <ul>
    <% resume.education.forEach(e => { %>
      <li><%= e.degree %> at <%= e.institution %> (<%= e.year %>)</li>
    <% }) %>
  </ul>

  <h4>Experience</h4>
  <ul>
    <% resume.experience.forEach(ex => { %>
      <li><strong><%= ex.position %></strong> at <%= ex.company %> (<%= ex.duration %>)<br><%= ex.description %></li>
    <% }) %>
  </ul>

  <h4>Skills</h4>
  <ul>
    <% resume.skills.forEach(skill => { %>
      <li><%= skill %></li>
    <% }) %>
  </ul>
</div>
</body>
</html>
