<!DOCTYPE html>
<html>
<head>
  <title>SkillBridge - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="/styles/theme.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="d-flex justify-content-end mb-3">
      <button class="btn btn-sm btn-outline-dark" onclick="toggleTheme()">ğŸŒ“ Toggle Theme</button>
    </div>

    <h1 class="mb-4">Welcome to <span class="text-primary">SkillBridge</span></h1>

    <% if (user) { %>
      <p class="fs-5">Hello, <strong><%= user.name %></strong>!</p>

      <div class="mb-4">
        <a href="/resume/form" class="btn btn-outline-success me-2 mb-2">ğŸ“ Create Resume</a>
        <a href="/resume/preview" class="btn btn-outline-info me-2 mb-2">ğŸ” Preview Resume</a>
        <a href="/resume/download" class="btn btn-outline-primary me-2 mb-2">â¬‡ï¸ Download PDF</a>
        <a href="/resume/u/<%= user.username %>" class="btn btn-outline-dark me-2 mb-2">ğŸŒ Public Portfolio</a>
      </div>

      <form method="POST" action="/auth/logout">
        <button type="submit" class="btn btn-danger">Logout</button>
      </form>
    <% } else { %>
      <div class="mb-4">
        <a href="/auth/login" class="btn btn-primary me-2">Login</a>
        <a href="/auth/register" class="btn btn-secondary">Register</a>
      </div>
    <% } %>
  </div>

  <script>
    function toggleTheme() {
      const dark = document.documentElement.classList.toggle("dark-mode");
      localStorage.setItem("theme", dark ? "dark" : "light");
    }

    if (localStorage.getItem("theme") === "dark") {
      document.documentElement.classList.add("dark-mode");
    }
  </script>
</body>
</html>
